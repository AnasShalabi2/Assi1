<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2196F3</item>
    </style>

    <style name="SectionLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="DetailText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="InputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">#2196F3</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="BudgetButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:backgroundTint">#BDBDBD</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>